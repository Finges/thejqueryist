<h1>Listing todos</h1>

<table>
  <thead>
    <tr>
      <th>Description</th>
      <th>Done</th>
      <th>Due</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr id='<%= todo.id %>'>
        <td><%= todo.description %></td>
        <td><%= todo.done %></td>
        <td><%= todo.due %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo), remote: true %></td>
        <td><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo', new_todo_path,remote: true, id: :new_link%>
